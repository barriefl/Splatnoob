<Window
    x:Class="Splatnoob.parametre"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Splatnoob"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="parametre"
    Width="800"
    Height="450"
    Background="black"
    mc:Ignorable="d">
    <Canvas ContextMenuClosing="Canvas_ContextMenuClosing">
        <Label
            Canvas.Left="314"
            Canvas.Top="56"
            Content="Paramètres"
            FontSize="36"
            Foreground="White" />
        <Button
            Canvas.Left="760"
            Canvas.Top="395"
            Width="40"
            Height="40"
            Background="#00DDDDDD"
            Click="Button_Click"
            Content="X"
            FontSize="30"
            Foreground="White" />
        <Slider
            x:Name="choisirTps"
            Canvas.Left="347"
            Canvas.Top="155"
            Width="120"
            Maximum="12"
            Minimum="1"
            SmallChange="1"
            TickFrequency="10" />
        <Label
            Canvas.Left="147"
            Canvas.Top="155"
            Width="146"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="temps total d'une partie"
            Foreground="White" />
        <Label
            x:Name="affichTps"
            Canvas.Left="514"
            Canvas.Top="155"
            Width="165"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="affichage"
            Foreground="White" />
        <TextBox
            Canvas.Left="260"
            Canvas.Top="205"
            Width="17"
            Height="17"
            Text="Z"
            TextWrapping="Wrap" />
        <TextBox
            Canvas.Left="260"
            Canvas.Top="250"
            Width="17"
            Height="17"
            Text="Q"
            TextWrapping="Wrap" />
        <TextBox
            Canvas.Left="260"
            Canvas.Top="295"
            Width="17"
            Height="17"
            Text="S"
            TextWrapping="Wrap" />
        <TextBox
            Canvas.Left="260"
            Canvas.Top="340"
            Width="17"
            Height="17"
            Text="D"
            TextWrapping="Wrap" />
        <Label
            Canvas.Left="100"
            Canvas.Top="200"
            Width="135"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 1 déplacement ↑"
            Foreground="White"
            RenderTransformOrigin="0.5,0.5" />
        <Label
            Canvas.Left="100"
            Canvas.Top="245"
            Width="144"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 1 déplacement ←"
            Foreground="White" />
        <Label
            Canvas.Left="100"
            Canvas.Top="290"
            Width="133"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 1 déplacement ↓"
            Foreground="White" />
        <Label
            Canvas.Left="100"
            Canvas.Top="335"
            Width="144"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 1 déplacement →"
            Foreground="White" />
        <TextBox
            Canvas.Left="460"
            Canvas.Top="205"
            Width="17"
            Height="17"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="↑"
            TextWrapping="Wrap" />
        <TextBox
            Canvas.Left="460"
            Canvas.Top="250"
            Width="17"
            Height="17"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="←"
            TextWrapping="Wrap" />
        <TextBox
            Canvas.Left="460"
            Canvas.Top="295"
            Width="17"
            Height="17"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="↓"
            TextWrapping="Wrap" />
        <TextBox
            Canvas.Left="460"
            Canvas.Top="340"
            Width="17"
            Height="17"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="→"
            TextWrapping="Wrap" />
        <Label
            Canvas.Left="300"
            Canvas.Top="200"
            Width="135"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 2 déplacement ↑"
            Foreground="White"
            RenderTransformOrigin="0.5,0.5" />
        <Label
            Canvas.Left="300"
            Canvas.Top="245"
            Width="144"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 2 déplacement ←"
            Foreground="White" />
        <Label
            Canvas.Left="300"
            Canvas.Top="290"
            Width="133"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 2 déplacement ↓"
            Foreground="White" />
        <Label
            Canvas.Left="300"
            Canvas.Top="335"
            Width="144"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Black"
            Content="joueur 2 déplacement →"
            Foreground="White" />
    </Canvas>
</Window>
