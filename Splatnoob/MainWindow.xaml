<Window x:Class="Splatnoob.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Splatnoob"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=myCanvas}"
        WindowStartupLocation="CenterScreen"
        Title="Splatnoob" Height="450" Width="800"  
        KeyDown="MouvementsJoueursEtVerifications">
    <Grid>
        <Canvas x:Name="monCanvas" Background="Black" Focusable="True">
            <Rectangle x:Name="rectFond" Height="434" Stroke="Black" Width="800"/>
            <Rectangle x:Name="joueur1" Height="25" Canvas.Left="228" Canvas.Top="45" Width="25" HorizontalAlignment="Left" VerticalAlignment="Center" Fill="#FF640000" Stroke="Black" Tag="joueur"/>
            <Rectangle x:Name="joueur2" Height="25" Canvas.Left="548" Canvas.Top="365" Width="25" Fill="#FF000064" HorizontalAlignment="Left" VerticalAlignment="Top" Stroke="Black" Tag="joueur" RenderTransformOrigin="0.48,0.482"/>
            <Label x:Name="cooLabelJ1" Content="Label" Canvas.Left="70" Canvas.Top="45" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="cooLabelJ2" Content="Label" Canvas.Left="718" Canvas.Top="45" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="labTemps" Content="180" Canvas.Left="74" Canvas.Top="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="labScoreRouge" Content="0" Canvas.Left="80" Canvas.Top="87" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="labScoreBleu" Content="0" Canvas.Left="729" Canvas.Top="87" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="labRougeGagne" Content="JOUEUR ROUGE A GAGNER" Canvas.Left="100" Canvas.Top="184" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" FontSize="48" FontFamily="Cascadia Mono SemiBold" Background="{x:Null}" Panel.ZIndex="3" UseLayoutRounding="False" Visibility="Hidden"/>
            <Label x:Name="labBleuGagne" Content="JOUEUR BLEU A GAGNER" Canvas.Left="114" Canvas.Top="184" FontSize="48" FontFamily="Cascadia Mono SemiBold" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF1919FF" Visibility="Hidden" Panel.ZIndex="3"/>
            <Label x:Name="labPersonneGagne" Content="MATCH NUL" Canvas.Left="268" Canvas.Top="184" FontSize="48" FontFamily="Cascadia Mono SemiBold" Background="{x:Null}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="3" Visibility="Hidden"/>
            <Button x:Name="butRejouer" Content="REJOUER" Canvas.Left="360" Canvas.Top="255" Padding="15,5,15,5" HorizontalAlignment="Left" VerticalAlignment="Center" Panel.ZIndex="6" BorderBrush="{x:Null}" Foreground="White" Background="#FF191919" Click="butRejouer_Click" UseLayoutRounding="False" RenderTransformOrigin="1,1" Visibility="Hidden"/>
        </Canvas>
    </Grid>
</Window>
