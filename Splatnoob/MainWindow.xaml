<Window x:Class="Splatnoob.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Splatnoob"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=myCanvas}"
        WindowStartupLocation="CenterScreen"
        Title="Splatnoob" Height="450" Width="800"  
        KeyDown="MouvementsJoueursEtVerifications">
    <Canvas x:Name="monCanvas" Background="Black" Focusable="True">
        <Rectangle x:Name="rectFond" Height="434" Stroke="Black" Width="800"/>
        <Rectangle x:Name="joueur1" Height="25" Canvas.Left="228" Canvas.Top="45" Width="25" HorizontalAlignment="Left" VerticalAlignment="Center" Fill="#FF640000" Stroke="Black" Tag="joueur"/>
        <Rectangle x:Name="joueur2" Height="25" Canvas.Left="548" Canvas.Top="365" Width="25" Fill="#FF000064" HorizontalAlignment="Left" VerticalAlignment="Top" Stroke="Black" Tag="joueur"/>
        <Label x:Name="cooLabelJ1" Content="Label" Canvas.Left="70" Canvas.Top="45" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle x:Name="rectOriginal" Height="75" Canvas.Left="362" Stroke="Black" Canvas.Top="180" Width="76" Fill="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="cooLabelJ2" Content="Label" Canvas.Left="718" Canvas.Top="45" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="labTemps" Content="180" Canvas.Left="74" Canvas.Top="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labScoreRouge" Content="0" Canvas.Left="80" Canvas.Top="87" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="labScoreBleu" Content="0" Canvas.Left="729" Canvas.Top="87" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Canvas>
</Window>
