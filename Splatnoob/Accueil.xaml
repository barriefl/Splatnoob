<Window
    x:Class="Splatnoob.Accueil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Splatnoob"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Accueil"
    Width="450"
    Height="500"
    mc:Ignorable="d">
    <Grid ContextMenuClosing="Canvas_ContextMenuClosing">
        <Button x:Name="boutonstart"
            Background="#FFF97C25"
            Click="Button_start_Click"
            Content="BONJOUR"
            FontSize="36" Margin="0,361,266,21"/>
        <Button x:Name="boutonparametre"
            Background="#FFF97C25"
            Click="Button_parametre_Click"
            Content="Paramètres"
            FontSize="36" Margin="249,361,10,21" />
        <ComboBox Canvas.Left="160" Canvas.Top="255" Margin="148,227,148,200">
            <ComboBoxItem Content="1 joueurs"/>
            <ComboBoxItem Content="2 joueurs"/>
        </ComboBox>
    </Grid>
</Window>
