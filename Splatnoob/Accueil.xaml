<Window
    x:Class="Splatnoob.Accueil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Splatnoob"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Accueil"
    Width="450"
    Height="500"
    mc:Ignorable="d">
    <Canvas ContextMenuClosing="Canvas_ContextMenuClosing">
        <Button
            Margin="40,420,474,75"
            Background="#FFF97C25"
            Click="Button_start_Click"
            Content="BONJOUR"
            FontSize="36" />
        <Button
            x:Name="boutonparametre"
            Canvas.Left="230"
            Canvas.Top="420"
            Background="#FFF97C25"
            Click="Button_parametre_Click"
            Content="Paramètres"
            FontSize="36" />
        <ComboBox
            Canvas.Left="160"
            Canvas.Top="255"
            Width="120">
            <ComboBoxItem Content="1 joueurs" />
            <ComboBoxItem Content="2 joueurs" />
        </ComboBox>
    </Canvas>
</Window>
